<Window x:Class="Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="41,65,0,0" VerticalAlignment="Top" Width="177" Background="White" OpacityMask="Black" Click="StartButtonClick"/>
        <TextBox x:Name="threadCountTextBox" HorizontalAlignment="Left" Margin="161,25,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="57"/>
        <TextBlock x:Name="threadNumberBlock" HorizontalAlignment="Left" Margin="41,25,0,0" TextWrapping="Wrap" Text="Number of threads:" VerticalAlignment="Top"/>
        <ListBox x:Name="threadStatusList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,100,0,0"/>
    </Grid>
</Window>
